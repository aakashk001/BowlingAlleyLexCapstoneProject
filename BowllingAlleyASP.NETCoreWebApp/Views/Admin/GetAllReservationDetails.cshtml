@model IEnumerable<BowllingAlleyASP.NETCoreWebApp.Models.Reservations>

@{
    ViewData["Title"] = "GetAllReservationDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h6> Type of User : Admin</h6>
<h1>Reservation Details </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SlotId)
            </th>
            <th>
                @Html.Hidden("Status")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlotId)
            </td>
            <td>
              @Html.Hidden("Status")
            </td>
            <td>
                @Html.ActionLink("Approve", "Approve", new { reservationId = item.ReservationId  }) |
               
                @Html.ActionLink("Reject", "Reject", new { reservationId = item.ReservationId  })
            </td>
        </tr>
}
    </tbody>
</table>
